{
  "python.linting.pylintEnabled": true,
  "python.linting.enabled": true,
  "python.pythonPath": "/usr/local/bin/python",
  "files.associations": {
    "*.yaml": "home-assistant"
  },
  "python.testing.pytestArgs": ["--no-cov"],
  "python.testing.unittestEnabled": false,
  "python.testing.pytestEnabled": true,
  "files.exclude": {
    "**/__pycache__": true,
    "**/.mypy_cache": true,
    "**/.pytest_cache": true
  },
  "cSpell.words": ["hass"]
}
